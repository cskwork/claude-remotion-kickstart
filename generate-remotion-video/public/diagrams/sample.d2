direction: right

inputs: Inputs {
  style: {
    fill: "#458588"
    stroke: "#83a598"
    font-color: "#ebdbb2"
    bold: true
  }

  voice: Voice {
    shape: cylinder
    style: {
      fill: "#689d6a"
      font-color: "#ebdbb2"
    }
  }

  assets: Assets {
    shape: cylinder
    style: {
      fill: "#d79921"
      font-color: "#1d2021"
    }
  }

  script: Script {
    shape: document
    style: {
      fill: "#b16286"
      font-color: "#ebdbb2"
    }
  }
}

claude: Claude Code {
  style: {
    fill: "#cc241d"
    stroke: "#fb4934"
    font-color: "#ebdbb2"
    bold: true
    font-size: 24
  }

  mcp: MCP Servers {
    style: {
      fill: "#d65d0e"
      font-color: "#ebdbb2"
    }

    playwright: Playwright {
      style: {
        fill: "#98971a"
        font-color: "#1d2021"
      }
    }
    replicate: Replicate {
      style: {
        fill: "#458588"
        font-color: "#ebdbb2"
      }
    }
    elevenlabs: ElevenLabs {
      style: {
        fill: "#b16286"
        font-color: "#ebdbb2"
      }
    }
  }
}

remotion: Remotion {
  style: {
    fill: "#689d6a"
    stroke: "#8ec07c"
    font-color: "#1d2021"
    bold: true
    font-size: 24
  }

  components: Components {
    style: {
      fill: "#458588"
      font-color: "#ebdbb2"
    }
  }

  render: Renderer {
    shape: hexagon
    style: {
      fill: "#d79921"
      font-color: "#1d2021"
    }
  }
}

video: Video {
  shape: oval
  style: {
    fill: "#b8bb26"
    stroke: "#98971a"
    font-color: "#1d2021"
    bold: true
    font-size: 20
  }
}

inputs.voice -> claude: transcribe {
  style: {
    stroke: "#83a598"
  }
}
inputs.assets -> claude {
  style: {
    stroke: "#fabd2f"
  }
}
inputs.script -> claude {
  style: {
    stroke: "#d3869b"
  }
}

claude -> remotion.components: generates {
  style: {
    stroke: "#8ec07c"
    stroke-width: 3
  }
}
claude.mcp.playwright -> remotion.components: screenshots {
  style: {
    stroke: "#b8bb26"
    stroke-dash: 5
  }
}
claude.mcp.replicate -> remotion.components: media {
  style: {
    stroke: "#83a598"
    stroke-dash: 5
  }
}
claude.mcp.elevenlabs -> remotion.components: voiceover {
  style: {
    stroke: "#d3869b"
    stroke-dash: 5
  }
}

remotion.components -> remotion.render {
  style: {
    stroke: "#fabd2f"
  }
}
remotion.render -> video: export {
  style: {
    stroke: "#b8bb26"
    stroke-width: 3
  }
}
